        //- Pagination
        nav.my-5(aria-label='Pagination')
          hr.my-4
          ul.pagination.justify-content-center
            li.page-item.disabled
              a.page-link(href='#', tabindex='-1', aria-disabled='true') Newer
            li.page-item.active(aria-current='page')
              a.page-link(href='#') 1
            li.page-item
              a.page-link(href='#') 2
